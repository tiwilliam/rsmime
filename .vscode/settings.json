{
    "[rust]": {
        "editor.formatOnSave": true
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
    },
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/*.so": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "target": true,
        "**/.pytest_cache": true,
        ".coverage": true,
    }
}
